            <version>3.0</version>
        </dependency>

        <!-- jasypt(密码加密) 依赖包 -->
        <dependency>
            <groupId>com.blog</groupId>
            <artifactId>common-jasypt</artifactId>
            <version>3.0</version>
        </dependency>

        <!-- xxl-job 依赖包 -->
        <dependency>
